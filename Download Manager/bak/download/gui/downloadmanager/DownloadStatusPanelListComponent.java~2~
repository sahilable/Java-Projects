package download.gui.downloadmanager;

import javax.swing.JTextField;
import javax.swing.JProgressBar;
import java.awt.Color;

/**
 *
 * @author  Malyadri Naidu
 */
public class DownloadStatusPanelListComponent extends javax.swing.JPanel
{
    private Color originalTextFieldBackColor;
    private Color originalProgressBarBackColor;
    private Color originalPanelBackColor;

    /** Creates new form DownloadStatusPanelListComponent */
    public DownloadStatusPanelListComponent()
    {
        initComponents();

        originalTextFieldBackColor = null;
        originalProgressBarBackColor = null;
        originalPanelBackColor = null;
    }//end constr

    /** This method is called from within the constructor to
     * initialize the form.
     * WARNING: Do NOT modify this code. The content of this method is
     * always regenerated by the Form Editor.
     */
    private void initComponents()//GEN-BEGIN:initComponents
    {
        textField = new javax.swing.JTextField();
        progressBar = new javax.swing.JProgressBar();

        setLayout(new java.awt.GridLayout(2, 1));

        textField.setEditable(false);
        add(textField);

        progressBar.setForeground(new java.awt.Color(0, 153, 0));
        progressBar.setStringPainted(true);
        add(progressBar);

    }//GEN-END:initComponents


    // Variables declaration - do not modify//GEN-BEGIN:variables
    protected javax.swing.JTextField textField;
    protected javax.swing.JProgressBar progressBar;
    // End of variables declaration//GEN-END:variables

    public void setBackground(Color c)
    {
        super.setBackground(c);

        if( originalPanelBackColor == null )
            originalPanelBackColor = c;

        if( textField == null || progressBar == null )
            return;

        if( originalTextFieldBackColor == null )
            originalTextFieldBackColor = textField.getBackground();

        if( originalProgressBarBackColor == null )
            originalProgressBarBackColor = progressBar.getBackground();

        // if selected
        if( ! c.equals(originalPanelBackColor) )
        {
            textField.setBackground(c);
            progressBar.setBackground(c);
        }//end if
        else
        {
            textField.setBackground(originalTextFieldBackColor);
            progressBar.setBackground(originalProgressBarBackColor);
        }//end else
    }//end method

}//end class